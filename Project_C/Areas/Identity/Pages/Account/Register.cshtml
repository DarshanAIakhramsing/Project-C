@page
@model RegisterModel
@{
    ViewData["Title"] = "Registreer";
}

<div class="col-11 col-md-8 col-lg-4 m-auto">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="row">
    <div class="col-11 col-md-8 col-lg-4 m-auto">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Maak een nieuw account aan.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Wachtwoord</label>
                <input asp-for="Input.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Herhaal wachtwoord</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Registreer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
